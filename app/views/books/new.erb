<% if flash.has?(:message) %>
	<%= flash[:message] %>
<% end %>

<h1>Add a Book</h1>
<form action="/books" method="post">
	<label>Title</label>
	<input type="text" name="title" placeholder="book title">
	<br><br>
	<label>Author</label>
	<input type="text" name="author" placeholder="author">
	<br><br>
	<input type="submit" name="submit" id="submit" value="Submit">
</form>